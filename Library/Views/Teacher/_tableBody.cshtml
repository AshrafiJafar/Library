@model IEnumerable<Library.Models.Teacher>

@foreach (var item in Model)
{
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.Sports)
            @SportType.List.Single(x => x.Id==item.SubjectId).Name
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeachersTimes)
          @*  @Day.ListDays.Single(x=> x.Id==item.).Name*@
        </td>
        <td>
            @item.Balance.ToString("#,0")
        </td>
        <td>
            <i class="fa fa-pencil button" data-toggle="tooltip" title="Edit" style=" color:red;" onclick="editTeacher(@item.Id)"></i>
            <i class="fa fa-info button" data-toggle="tooltip" title="Details" style=" color:darkorange;" onclick="detailsTeacher(@item.Id)"></i>
            <i class="fa fa-trash-o button" data-toggle="tooltip" title="Delete" style=" color:mediumvioletred;" onclick="deleteTeacher(@item.Id , '@item.FirstName', '@item.LastName', event)"></i>
        </td>
        @*<a href="Person/Delete?personId=@item.Id">Delete</a>*@
        @*<a asp-action="edit" asp-route-id="?personId=@item.Id">Edit</a>*@
       @* <td>
            <i class=" button" data-toggle="tooltip" title="SelectTime" style="color:slategray;" onclick="TeachersTime(@item.Id)"></i>
        </td>*@
    </tr>
  
}



