@model Library.Models.Command.DeletePersonCommand

<form method="post">
   <div class="row">
       <div class="col-md-6">
           <h3>Are you sure you want to delete the person "@Model.FirstName @Model.LastName"</h3>

           <a href="/Person" class="btn btn-success">Back</a>
           <input type="hidden" name="PersonId" value="@Model.PersonId" />
           <input type="submit" value="Delete" class="btn btn-danger" />

       </div>
   </div>


</form>