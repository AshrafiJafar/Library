@model EditPersonCommand

<form method="post">

    @Html.HiddenFor(x => x.Id)

    <div class="row g-3">
        <div class="col-sm">
            @Html.TextBoxFor(x => x.FirstName,"", new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.FirstName)})
            @Html.ValidationMessageFor(x => x.FirstName, "",new{@class="text-danger"})
        </div>
        <div class="col-sm-5">
            @Html.TextBoxFor(x => x.LastName,"", new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.LastName)})
            @Html.ValidationMessageFor(x => x.LastName, "",new{@class="text-danger"})
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(x => x.NationalCode,"", new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.NationalCode)})
            @Html.ValidationMessageFor(x => x.NationalCode, "",new{@class="text-danger"})
        </div>
    </div>


    <div class="row g-3">
        <div class="col-sm">
            @Html.TextBoxFor(x => x.BirthDate,"MM/dd/yyyy", new {@class="form-control datepicker", @placeholder=Html.DisplayNameFor(x => x.BirthDate)})
            @Html.ValidationMessageFor(x => x.BirthDate, "",new{@class="text-danger"})
        </div>
        <div class="col-sm-5">
            @Html.TextBoxFor(x => x.Height,"", new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.Height)})
            @Html.ValidationMessageFor(x => x.Height, "" ,new{@class="text-danger"})
        </div>
        <div class="col-sm">
            @Html.TextBoxFor(x => x.Weight,"", new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.Weight)})
            @Html.ValidationMessageFor(x => x.Weight, "",new{@class="text-danger"})
        </div>
    </div>

    <div class="row g-3">
        <div class="col-sm">
            @Html.TextBoxFor(x => x.PhoneNumber,"", new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.PhoneNumber)})
            @Html.ValidationMessageFor(x => x.PhoneNumber, "",new{@class="text-danger"})
        </div>
        <div class="col-sm-5">
            @Html.TextBoxFor(x => x.Mobile,"", new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.Mobile)})
            @Html.ValidationMessageFor(x => x.Mobile ,"",new{@class="text-danger"})
        </div>
        <div class="col-sm">
            @Html.TextAreaFor(x => x.Address,2,3, new {@class="form-control", @placeholder=Html.DisplayNameFor(x => x.Address)})
            @Html.ValidationMessageFor(x => x.Address, "",new{@class="text-danger"})
        </div>
    </div>
    <div class="row g-3">
        <div class="col-sm">
            <button type="submit" class="btn btn-success">Submit</button>
            <a class="btn btn-secondary" href="person/index">Cancel</a>
        </div>
    </div>
</form>


@section Scripts {
    @*@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }*@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $('.datepicker').datepicker();
    </script>
}