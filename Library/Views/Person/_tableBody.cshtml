@model IEnumerable<Library.Models.Person>


@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NationalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
             @item.Balance.ToString("#,0")
        </td>
        <td>
            <a href="#" onclick="edit(@item.Id)">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a href="#" onclick="deletePerson(@item.Id, '@item.FirstName', '@item.LastName', event)">Delete</a> |
            <a href="#" onclick="balanceIncrement(@item.Id)">Balance</a>
        </td>
    </tr>
}
